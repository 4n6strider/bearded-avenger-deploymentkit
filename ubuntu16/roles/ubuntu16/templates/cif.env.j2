# https://coreos.com/os/docs/latest/using-environment-variables-in-systemd-units.html

CIF_LOGLEVEL=INFO

CIF_RUNTIME_PATH={{ cif_runtime_path }}
CIF_STORE_STORE={{ cif_store_store }}
CIF_ROUTER_CONFIG_PATH={{ cif_router_config_path }}
CIF_HUNTER_EXCLUDE={{ cif_hunter_exclude }}

CSIRTG_SMRT_RUNTIME_PATH={{ csirtg_smrt_runtime_path }}
CSIRTG_SMRT_CONFIG_PATH={{ csirtg_smrt_config_path }}
CSIRTG_SMRT_RULES_PATH={{ csirtg_smrt_rules_path }}/default
CSIRTG_SMRT_CACHE_PATH={{ csirtg_smrt_runtime_path }}
CSIRTG_SMRT_CIF_REMOTE={{ csirtg_smrt_cif_remote }}
CSIRTG_SMRT_FIREBALL_SIZE={{ csirtg_smrt_fireball_size }}

# enable more detailed debugging, requires restart of service
#CIF_STORE_TRACE=1
#CIF_HUNTER_TRACE=1
#CIF_GATHERER_TRACE=1